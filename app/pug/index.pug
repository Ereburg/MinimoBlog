block content
    main.main

        section.intro.container
            h2.visually-hidden The rescent posts
            picture.intro__picture-wrapper
                source(media="(min-width: 1200px)", srcset="images/webp/intro-image@2x.webp 2x", type="image/webp")
                source(media="(max-width: 1199px)", srcset="images/webp/intro-image.webp", type="image/webp")
                source(media="(min-width: 1200px)", srcset="images/@x2/intro-image@2x.jpg 2x", type="image/jpg")
                source(media="(max-width: 1199px)", srcset="images/@x1/intro-image.jpg", type="image/jpg")
                img(src="images/@x1/intro-image.jpg", alt="Intro image").intro__main-image
            .intro__post-wrapper.container--regular
                a(href="photodiary.html", target="_blank", rel="noopener noreferrer").posts-anchor photodiary
                h3.intro__title  
                    a(href="post.html").intro__link The perfect weekend getaway
                p.intro__paragraph #{paragraphText}    
                a(href="").intro__comments Leave a comment
        
        section.posts.container
            h2.visually-hidden Latest updates
            .posts__grid.container--regular
                +postsArticle(src, 'lifestyle.html', 'Lifestyle', 'More than just a music festival', postsText)
                    a(href='posts.html').posts__link
                        picture
                            source(media="(min-width: 1200px)", srcset="images/webp/post-image-1@2x.webp 2x", type="image/webp")
                            source(media="(max-width: 1199px)", srcset="images/webp/post-image-1.webp", type="image/webp")
                            source(media="(min-width: 1200px)", srcset="images/@x2/post-image-1@2x.jpg 2x", type="image/jpg")
                            source(media="(max-width: 1199px)", srcset="images/@x1/post-image-1.jpg", type="image/jpg")
                            img(src="images/@x1/post-image-1.jpg", alt="Posts image").posts__main-image

                +postsArticle("images/post-image-2.png", 'lifestyle.html', 'Lifestyle', 'Life tastes better with coffee', postsText)
                    a(href='posts.html').posts__link
                        picture
                            source(media="(min-width: 1200px)", srcset="images/webp/post-image-2@2x.webp 2x", type="image/webp")
                            source(media="(max-width: 1199px)", srcset="images/webp/post-image-2.webp", type="image/webp")
                            source(media="(min-width: 1200px)", srcset="images/@x2/post-image-2@2x.jpg 2x", type="image/jpg")
                            source(media="(max-width: 1199px)", srcset="images/@x1/post-image-2.jpg", type="image/jpg")
                            img(src="images/@x1/post-image-2.jpg", alt="Posts image").posts__main-image

                +postsArticle("images/post-image-3.png", 'photodiary.html', 'photodiary', 'American dream', postsText)
                    a(href='posts.html').posts__link
                        picture
                            source(media="(min-width: 1200px)", srcset="images/webp/post-image-3@2x.webp 2x", type="image/webp")
                            source(media="(max-width: 1199px)", srcset="images/webp/post-image-3.webp", type="image/webp")
                            source(media="(min-width: 1200px)", srcset="images/@x2/post-image-3@2x.jpg 2x", type="image/jpg")
                            source(media="(max-width: 1199px)", srcset="images/@x1/post-image-3.jpg", type="image/jpg")
