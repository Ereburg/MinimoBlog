                +postsArticle("images/post-image-4.png", 'photodiary.html', 'photodiary', 'A day exploring the Alps', postsText)
                    a(href='posts.html').posts__link
                        picture
                            source(media="(min-width: 1200px)", srcset="images/webp/post-image-4@2x.webp 2x", type="image/webp")
                            source(media="(max-width: 1199px)", srcset="images/webp/post-image-4.webp", type="image/webp")
                            source(media="(min-width: 1200px)", srcset="images/@x2/post-image-4@2x.jpg 2x", type="image/jpg")
                            source(media="(max-width: 1199px)", srcset="images/@x1/post-image-4.jpg", type="image/jpg")
                            img(src="images/@x1/post-image-4.jpg", alt="Posts image").posts__main-image

        section.subscribe.subscribe--bg-dark
            h2.subscribe__title Sign up for our newsletter!
            form(method="POST").subscribe__form
                input.subscribe__email#subscribeEmail(type="email", name="subscribe" placeholder="Enter a valid email address" required)
                button(type="submit" aria-label="Submit your email").subscribe__button
                    svg.subscribe__icon
                        use(xlink:href='images/sprite.svg#icon-arrow')
        
        section.posts.container
            h2.visually-hidden Latest updates
            .posts__grid.container--regular
                +postsArticle("images/post-image-5.png", 'lifestyle.html', 'lifestyle','Top 10 song for running', postsText)
